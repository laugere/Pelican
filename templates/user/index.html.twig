{% extends 'HomePage.html.twig' %} 

{% block body %}
<div id="content-container" class="scrollable">
    {% include 'vues/ContentHeader.html.twig' with {'controller_name' : 'controllerName.user'|trans } %}
    <div class="subcontainer scrollbar">
        <div class="user-info-container">
            <img class="avatar-img" src="{{ asset('uploads/images/users/' ~ user.image) }}">
            <h3 class="text-center">{{ user.pseudo }}</h3>
            <div class="user-info-counter row no-height-row">
                <div class="col-lg noselect" onclick="window.location = '/friend/{{ user.id }}/view';">
                    <h5>{% trans %}user.counter.friends{% endtrans %}</h4>
                    <h6>{{  user.friendship | filter(v => v.validate == true) | length }}</h5>
                </div>
                <div class="col-lg noselect">
                    <h5>{% trans %}user.counter.events{% endtrans %}</h4>
                    <h6>{{  user.event | length   }}</h5>
                </div>
                <div class="col-lg noselect">
                    <h5>{% trans %}user.counter.community{% endtrans %}</h4>
                    <h6>{{  user.getCommunity | length   }}</h5>
                </div>
            </div>
        </div>

        {% if user.event is empty %}
            <h6 class="text-muted centered-message"><i class="fas fa-hotdog"></i> {% trans %}message.nocontent{% endtrans %}</h6>
        {% else %} 
            {% for participation in user.event %}
                {% set event = participation.getEvent %}
                {% include ('vues/EventCard.html.twig') %} 
            {% endfor %} 
        {% endif %}
    </div>
</div>
{% endblock %} 

{% block javascripts %} 
{% endblock %}