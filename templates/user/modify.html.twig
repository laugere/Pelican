{% extends 'HomePage.html.twig' %}
{% block body %}
<div id="content-container" class="scrollable">
	{% include 'vues/ContentHeader.html.twig' with {'controller_name' : 'user.modify.title'|trans } %}
	<div class="subcontainer scrollbar">
		{{ form_start(form) }}
		<div class="form-group">
			<label for="inputEmail">{% trans %}security.register.email{% endtrans %}</label>
			{{ form_widget(form.email) }}
			<small id="emailHelp" class="form-text text-muted">
				{% trans %}security.register.emailspan{% endtrans %}
			</small>
		</div>
		<div class="form-group">
			<label for="inputEmail">{% trans %}security.register.pseudo{% endtrans %}</label>
			{{ form_widget(form.pseudo) }}
		</div>
		<div class="form-group">
			<label for="inputEmail">{% trans %}security.register.city{% endtrans %}</label>
			{{ form_widget(form.city) }}
		</div>
		<div class="form-group">
			<label for="image">{% trans %}security.register.image{% endtrans %}</label>
			{{ form_widget(form.imageFile) }}
			<img id="image_output"/>
		</div>
		<div class="form-group">
			<button type="submit" class="btn btn-primary">
				{% trans %}button.save{% endtrans %}
			</button>
		</div>
		{{ form_end(form) }}
	</div>
</div>
{% endblock %}
{% block javascripts %}{{ encore_entry_script_tags('app') }}{% endblock %}