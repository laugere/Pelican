<div class="event-card" onclick="window.location = '/event/{{ event.user.id }}/view';" style="background-image: url({{ asset('uploads/images/events/' ~ event.image) }});background-size: cover;">
    <div class="avatar-container">
        <img class="avatar-img" src="{{ asset('uploads/images/users/' ~ event.user.image) }}" width="45px" height="45px" />
        <p class="avatar-user-name">
            {{ event.user.pseudo }}
        </p>
        <span class="avatar-date">
            {{ event.getDateCreation|date('d/m/Y') }}
        </span>
    </div>
    <div class="event-card-footer">
        <div class="col">
            <div class="event-card-title-container">
                <div class="event-card-title">
                    {{ event.name|length > 50 ? event.name|slice(0, 50) ~ '...' : event.name }}
                </div>
            </div>
        </div>
        <div class="row no-height-row">
            <div class="col-lg-4">
                <div class="event-card-info-container">
                    <div class="event-card-info-subcontainer">
                        <i class="event-card-info-icon fas fa-compass"></i> {{ event.location }}
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="event-card-info-container">
                    <div class="event-card-info-subcontainer">
                        <i class="event-card-info-icon fas fa-calendar-week"></i> {{ event.date|date('d/m/Y') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>