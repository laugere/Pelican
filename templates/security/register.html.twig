<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<link rel="icon" type="image/png" href="{{ asset('build/icon/color/32.png') }}"/>

		<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

		<title>
			Pelican
		</title>

		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<div id="loginFrame">
			{% for flashError in app.flashes('verify_email_error') %}
				<div class="alert alert-danger" role="alert">{{ flashError }}</div>
			{% endfor %}

			<h1>Inscription</h1>

			{{ form_start(registrationForm) }}
			<div class="form-group">
				<label for="inputEmail">Email</label>
				{{ form_widget(registrationForm.email) }}
				<small id="emailHelp" class="form-text text-muted">Nous ne partagerons jamais votre courriel avec quelqu'un d'autre.</small>
			</div>
			<div class="form-group">
				<label for="inputPassword">Mot de passe</label>
				{{ form_widget(registrationForm.plainPassword) }}
			</div>
			<div class="form-group">
				{{ form_widget(registrationForm.agreeTerms) }}
			</div>
			<button type="submit" class="btn btn-outline-success">S'inscrire</button>
			<button type="button" class="btn btn-outline-warning" onclick="location.href='/login';">Se connecter</button>
			{{ form_end(registrationForm) }}
		</div>
	</body>
</html>
