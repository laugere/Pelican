{% extends 'HomePage.html.twig' %} {% block body %}
<div id="content-container" class="scrollable">
    <div class="content-brand">
        <div class="row">
            <div class="col-9">
                <h4 class="content-title">
                    {% trans %}controllerName.home{% endtrans %}
                </h4>
            </div>
            <div class="col-3 content-search">
                <a href="#"><i class="fas fa-search fa-sm colored-icon"></i></a>
            </div>
        </div>
    </div>
    <div class="subcontainer scrollbar no-extra-padding">
        <h5 class="text-center">
            {% trans %}home.nextEvent{% endtrans %}
        </h5>
        {% if events is empty %}
        <h6 class="centered-message"><i class="fas fa-hotdog"></i> {% trans %}message.nocontent{% endtrans %}</h6>{% else %} {% for event in events %} {% include ('vues/EventCard.html.twig') %} {% endfor %} {% endif %}
    </div>
</div>
{% endblock %} {% block javascripts %}
<script>
    $('#filter-event-popover').popover({
        html: true,
        content: function() {
            return $('#popover_content_wrapper').html();
        }
    });
</script>
{% endblock %}