{% extends 'HomePage.html.twig' %} {% block body %}
<div id="content-container" class="scrollable">
    {% include 'vues/ContentHeader.html.twig' with {'controller_name' : 'controllerName.home'|trans, 'search' : true } %}
    <div class="subcontainer scrollbar no-extra-padding">
        <h5 class="text-center">
            {% trans %}home.nextEvent{% endtrans %}
        </h5>
        {% if events is empty %}
        <h6 class="text-muted centered-message"><i class="fas fa-hotdog"></i> {% trans %}message.nocontent{% endtrans %}</h6>{% else %} {% for event in events %} {% include ('vues/EventCard.html.twig') %} {% endfor %} {% endif %}
    </div>
</div>
{% endblock %} {% block javascripts %}
<script>
    $('#filter-event-popover').popover({
        html: true,
        content: function() {
            return $('#popover_content_wrapper').html();
        }
    });
</script>
{% endblock %}