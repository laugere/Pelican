					</li>
				</ul>
			</div>
		</nav>
		<div class="subcontainer scrollbar">
			{% for community in communitys  %}
				<div class="community-card">
					<img src="{{ asset('build/wejdene.jpg') }}" width="70px" height="70px">
					<div>
						<h4 class="card-title">{{ community.name }}</h4>
					</div>
