{% extends 'HomePage.html.twig' %} 

{% block body %}
  <div id="content-container" class="scrollable">
      <div class="subcontainer scrollbar">
          <h1>{{ event.name }}</h1>
          <h5>{% trans %}event.view.the{% endtrans %} {{ event.date|format_datetime('full', 'none', locale = 'message.datelocale'|trans) }}</h5>
          <p>{{ event.nbParticipant }} {% trans %}event.view.people{% endtrans %}</p>
          <a href="{{ asset('uploads/images/events/' ~ event.image) }}" data-toggle="lightbox">
              <div class="event-img" style="background-image: url({{ asset('uploads/images/events/' ~ event.image) }});"></div>
          </a>
          <div id="event-{{ event.id }}">
              <div class="form-group event-view-action" style="margin-bottom: 0 !important;">
                {% set trouve = false %}

                {% for participant in event.participations %} 
                  {% if app.user.id == participant.user.id %}
                    {% if event.date > date() %}
                      <button type="button" onclick="onClickBtnGoToEvent('{{path('event_goto',{eventId: event.id}) }}', '{{ event.id }}');" class="btn btn-danger">
                        <i class="fas fa-times"></i>
                        {% trans %}button.stopparticipate{% endtrans %}
                      </button> 
                    {% else %}
                      <button type="button" class="btn btn-dark disabled" disabled>
                        {% trans %}button.hasparticipate{% endtrans %}
                      </button> 
                    {% endif %}
                    
                    {% set trouve = true %}
                  {% endif %}
                {% endfor %}
                
                {% if trouve == false %}
                  {% if event.date > date() %}
                    <button type="button" onclick="onClickBtnGoToEvent('{{path('event_goto',{eventId: event.id})}}', '{{ event.id }}');" class="btn btn-warning">
                      <i class="fas fa-arrow-right"></i>
                      {% trans %}button.participate{% endtrans %}
                    </button> 
                  {% else %}
                    <button type="button" class="btn btn-dark disabled" disabled>
                      {% trans %}button.expired{% endtrans %}
                    </button> 
                  {% endif %}
                {% endif %} 
                
                {% if event.user == app.user %}
                  {% if event.date > date() %}
                    <button type="button" onclick="window.location = '/event/{{ event.id }}/modify';" class="btn btn-info btn-round">
                      <i class="fas fa-pen"></i>
                    </button>
                  {% endif %}
                  <button type="button" class="btn btn-danger btn-round" data-toggle="modal" data-target="#dialogModalSupp">
                    <i class="fas fa-times"></i>
                  </button> 
                {% endif %}
              </div>
          </div>

          {% if event.description|length > 255 %}
            <div id="event-description">
                <p class="collapse" id="event-description-collapse" aria-expanded="false">{{ event.description }}</p>
                <a role="button" class="collapsed" data-toggle="collapse" href="#event-description-collapse" aria-expanded="false" aria-controls="event-description-collapse"></a>
            </div>
          {% else %}
            <p>{{ event.description }}</p>
          {% endif %}

          <br />
          
          {% if event.participations is not empty %}
            <h5 class="text-center">{% trans %}event.view.participant{% endtrans %}</h5>
            {% for participation in event.participations %} 
              {% set user = participation.getUser %} 
              {% set friendships = user.getFriendship %} 
              {% include ('vues/UserCard.html.twig') %} 
            {% endfor %} 
          {% endif %}

      </div>
  </div>

  {% include 'vues/ModalDialogSupp.html.twig' %} 
  {% include 'vues/ModalDialogFullEvent.html.twig' %} 
{% endblock %}

{% block javascripts %} 
{% endblock %}