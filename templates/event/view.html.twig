{% extends 'HomePage.html.twig' %} {% block body %}
<div id="content-container" class="scrollable">
    <div class="subcontainer scrollbar">
        <h1>
            {{ event.name }}
        </h1>
        <h5>
            Le {{ event.date|format_datetime('full', 'none', locale = 'fr') }}
        </h5>
        <p>
            {{ event.nbParticipant }} Personnes
        </p>
        <hr />
        <p>
            {{ event.description }}
        </p>
        <br /><br />
    </div>
    <div id="event-{{ event.id }}">
        <div class="form-group view-footer" style="margin-bottom: 0 !important;">
            {% if isIn %}
            <button type="button" onclick="onClickBtnGoToEvent('{{
          path(
            'event_goto',
            {
              eventId: event.id
            }
          )
          }}', '{{ event.id }}');" class="btn btn-outline-danger">
        <i class="fas fa-times"></i>
        Ne plus participer
      </button> {% else %}
            <button type="button" onclick="onClickBtnGoToEvent('{{
          path(
            'event_goto',
            {
              eventId: event.id
            }
          )
          }}', '{{ event.id }}');" class="btn btn-outline-warning">
        <i class="fas fa-arrow-right"></i>
        Participer
      </button> {% endif %} {% if event.idCreator == app.user.id %}
            <button type="button" onclick="window.location = '/event/{{ event.id }}/modify';" class="btn btn-outline-info btn-round">
        <i class="fas fa-pen"></i>
      </button>
            <button type="button" class="btn btn-outline-danger btn-round" data-toggle="modal" data-target="#dialogModalSupp">
        <i class="fas fa-times"></i>
      </button> {% endif %}
        </div>
    </div>
</div>
{% include 'vues/ModalDialogSupp.html.twig' %} {% endblock %}{% block javascripts %} {% endblock %}